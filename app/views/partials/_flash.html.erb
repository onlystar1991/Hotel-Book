<% flash.each do |name, msg| %>
	<% if name.eql? 'notice' %>
		<%= content_tag :div, "<a href='#' class='close' data-dismiss='alert' arial-label='close'>&times;</a>#{msg}".html_safe, id: "flash_#{name}", class: 'alert alert-success' %>
	<% else %>
		<%= content_tag :div, "<a href='#' class='close' data-dismiss='alert' arial-label='close'>&times;</a>#{msg}".html_safe, id: "flash_#{name}", class: 'alert alert-danger' %>
	<% end %>
<% end %>